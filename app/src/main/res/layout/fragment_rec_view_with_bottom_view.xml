<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_single_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/linLayout_bottom_item_add"/>

    <LinearLayout
        android:id="@+id/linLayout_bottom_item_add"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mcv_height"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="?attr/colorPrimary">

        <EditText
            android:id="@+id/editText_bot_item_name"
            android:layout_width="@dimen/custom_mcv_width"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/keyline_1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />


        <ImageButton
            android:id="@+id/imageButton_add_item"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_add" />

    </LinearLayout>
</RelativeLayout>
</layout>