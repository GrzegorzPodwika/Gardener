<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_my_tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/linLayout_tools"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/keyline_1" />

        <LinearLayout
            android:id="@+id/linLayout_tools"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mcv_height"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="?attr/colorPrimary">

            <EditText
                android:id="@+id/editText_my_tools_name_add"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/keyline_1"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:inputType="textCapSentences"
                android:paddingStart="@dimen/keyline_2"
                android:paddingEnd="@dimen/keyline_1"
                android:textColor="@color/white_50" />

            <EditText
                android:id="@+id/editText_price_of_tool"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/keyline_4"
                android:layout_weight="0.3"
                android:gravity="center"
                android:inputType="number"
                android:paddingStart="@dimen/keyline_1"
                android:paddingEnd="@dimen/keyline_1"
                android:textColor="@color/white_50" />

            <ImageButton
                android:id="@+id/imageButton_add_tool"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/keyline_4"
                android:layout_marginEnd="@dimen/keyline_2"
                app:srcCompat="@drawable/ic_add" />
        </LinearLayout>

    </RelativeLayout>
</layout>
